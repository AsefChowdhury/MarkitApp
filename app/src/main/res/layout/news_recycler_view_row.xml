<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:elevation="@dimen/_60sdp"
        android:background="@color/primary"




        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@color/primary_light">

            <TextView
                android:id="@+id/textHeadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No Headline"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/primary_light"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:background="@drawable/headline_background"
                android:padding="@dimen/_4sdp"
                android:gravity="center"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No Author Found"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/primary_dark"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:background="@drawable/headline_background"
                android:padding="@dimen/_4sdp"


                app:layout_constraintTop_toBottomOf="@id/textHeadline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textPublishedDate"/>

            <TextView
                android:id="@+id/textSource"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No Source Found"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/primary_dark"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:background="@drawable/headline_background"
                android:padding="@dimen/_4sdp"


                app:layout_constraintTop_toBottomOf="@id/textAuthor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textPublishedDate"/>

            <TextView
                android:id="@+id/textPublishedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No Published Date"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/primary_dark"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:background="@drawable/headline_background"
                android:padding="@dimen/_4sdp"


                app:layout_constraintTop_toBottomOf="@id/textHeadline"
                app:layout_constraintEnd_toEndOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>